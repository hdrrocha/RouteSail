<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backround_speed_ac"
    tools:context="com.example.helderrocha.routesail.SpeedActivity">


    <TextView
        android:layout_width="300dp"
        android:textAlignment="center"
        android:layout_height="62dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:fontFamily="@string/common_google_play_services_install_text"
        android:text="Informe a velocidade média do seu barco para começar"
        android:textColor="#ffff"
        android:textSize="21dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        android:alpha="45"
        app:layout_constraintBottom_toTopOf="@+id/textViewSpeed"
        android:id="@+id/textView" />

<android.support.v7.widget.AppCompatImageView
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:src="@drawable/sail2"
    android:layout_marginBottom="8dp"
    app:layout_constraintBottom_toTopOf="@+id/textView"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="8dp"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginEnd="8dp"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginStart="8dp" />
    <EditText
        android:id="@+id/textViewSpeed"
        android:layout_width="0dp"
        android:layout_height="49dp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints"
        android:textAlignment="center"
        android:inputType="number"
        android:backgroundTint="#fff"
        android:textColor="#ffff"
        android:layout_marginEnd="24dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="64dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonCalculo"
        app:layout_constraintHorizontal_bias="0.0" />


    <Button
        android:id="@+id/buttonCalculo"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginEnd="24dp"
        android:background="#ffffff"
        android:text="Começar"
        android:textColor="#7e61f7"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="92dp"
        app:layout_constraintHorizontal_bias="0.0" />

</android.support.constraint.ConstraintLayout>
