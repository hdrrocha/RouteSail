<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.helderrocha.routesail.ConfifugeRangeActivity">

    <ImageButton
        android:id="@+id/buttonMais"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="fitCenter"
        android:background="@drawable/ic_mais"
        android:layout_marginTop="68dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="32dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="32dp" />

    <TextView
        android:id="@+id/editTextRange"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:inputType="number"
        android:text="10KM"
        android:textSize="46dp"
        android:fontFamily="@font/circular_std_medium"
        android:textColor="@color/colorTitleTextDark"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:layout_editor_absoluteX="0dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <ImageButton
        android:id="@+id/buttonMenos"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/ic_menos"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextRange"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="32dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="velocidade"
        android:textSize="18dp"
        android:fontFamily="@font/circular_std_book"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonMais"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        android:textColor="@color/colorTitleText"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="143dp"
        android:orientation="vertical"
        android:background="#d8d8d9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonMenos"
        app:layout_constraintVertical_bias="1.0">
        <ImageButton
            android:id="@+id/buttonVelocidade"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/button_background_confirmar_green"
            app:layout_constraintTop_toBottomOf="@+id/buttonRange"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_gravity="center|center_vertical"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_check"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
